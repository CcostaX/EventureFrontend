<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".RoutesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/dark_blue"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:id="@+id/logo1"
            android:src="@drawable/eventure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="40sp"
            android:text="Profile"
            android:id="@+id/textW"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo1" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintVertical_bias="0.30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_circle"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintVertical_bias="0.30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_person"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/nameProfile"
            android:text="John Doe"
            android:background="@color/white"
            android:textColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            app:layout_constraintVertical_bias="0.60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/emailProfile"
            android:text="johndoe@mail.pt"
            android:background="@color/white"
            android:textColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            app:layout_constraintVertical_bias="0.70"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/previousTravelsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.8"
            android:backgroundTint="@color/blue"
            android:text="My previous travels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/myAchievementsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="My Achievements"
            app:layout_constraintVertical_bias="0.88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/profileSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintVertical_bias="0.13"
            app:layout_constraintHorizontal_bias="0.95"
            android:backgroundTint="@color/dark_blue"
            android:background="@drawable/ic_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>